<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.codingsepo.example.demo.dao.MemberDao">

	<insert id="join" useGeneratedKeys="true" keyProperty="num">
		INSERT
		INTO member
		SET regDate = NOW(),
		updateDate = NOW(),
		loginId =
		#{loginId},
		loginPw = #{loginPw},
		name = #{name},
		nickname = #{nickname},
		email = #{email},
		hpNum = #{hpNum},
		authKey = CONCAT("authKey1__", UUID(), "__", RAND())
	</insert>

	<select id="getMember" resultType="Member">
		SELECT *
		FROM `member`
		WHERE
		loginId = #{id}
	</select>

	<select id="getMemberByLoginId" resultType="Member">
		SELECT *
		FROM `member`
		WHERE loginId = #{loginId}
	</select>

	<select id="getMemberByAuthkey" resultType="Member">
		SELECT *
		FROM `member`
		WHERE authKey = #{authKey}
	</select>
	
	<select id="getMemberByNum" resultType="Member">
		SELECT *
		FROM `member`
		WHERE num = #{num}
	</select>

	<update id="modifyMember">
		UPDATE `member`
		<set>
			updateDate = NOW(),

			<if test="name != null">
				name = #{name},
			</if>

			<if test="loginPw != null">
				`loginPw` = #{loginPw},
			</if>
			
			<if test="nickname != null">
				`nickname` = #{nickname},
			</if>
			
			<if test="email != null">
				`email` = #{email},
			</if>
			
			<if test="hpNum != null">
				`hpNum` = #{hpNum},
			</if>
				
		</set>
		WHERE num = #{num}
	</update>

</mapper>
